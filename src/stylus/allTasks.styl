@import './base'

.weui_dialog
  background-color rgba(238, 238, 238, 0) !important
.allTasks-modal
  border-radius 10px
  position relative
  // background-color #fafafc
.allTasks-header
  top -3%
  width 100%
  position absolute
  height auto
  img
    width 190px
    height 190px
    margin 0 auto
.allTasks-content
  padding-top 80px
  margin-top 10%
  border-bottom 1px #ececec solid
  border-top-left-radius 10px
  border-top-right-radius 10px
  background-color #fafafc
  div
    padding 5px
    span
      font-size 14px
.allTasks-footer
  height 50px
  margin-bottom 16%
  border-bottom-left-radius 10px
  border-bottom-right-radius 10px
  & > div
    & > span
      font-size 14px
      height 50px
      line-height 50px
  div
    &:nth-child(odd)
      background-color #ff2178
      color #fff
    &:nth-child(odd):active
      background-color #e61e6c
      color #fff
    &:nth-child(even)
      background-color #f2f2f2
      color #4a4a4a
    &:nth-child(even):active
      background-color #ffffff
      color #4a4a4a
